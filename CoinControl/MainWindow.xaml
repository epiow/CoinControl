<Window x:Class="CoinControl.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinControl"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">

    <Grid Height="434">
        <Grid.Background>
            <ImageBrush ImageSource="/img/mainbg.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="txtPassword" Grid.Row="3" Margin="438,217,105,-47" Height="41.96" Padding="11,0,0,0" VerticalContentAlignment="Center" PasswordChanged="PassChanged"/>

        <Button Content="Sign In" Click="btnLogin_Click" Grid.Row="3" Margin="373,304,250,-123" RenderTransformOrigin="0.5,0.5" Height="35" Width="175">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.061"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Sign Up" Click="createAcc_Click" Margin="565,301,60,-124" Grid.Row="3" Height="35">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.061"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="Welcome" HorizontalAlignment="Left" Margin="400,39,0,0" Grid.Row="3" Width="364" FontFamily="Nirmala UI" FontSize="72" VerticalAlignment="Top" FontStretch="UltraCondensed" FontWeight="UltraBlack"/>
        <TextBox x:Name="txtUsername" Grid.Row="3" Margin="438,148,105,22" Height="42" TextChanged="txtUsername_TextChanged" VerticalContentAlignment="Center" Padding="11,0,0,0"/>
        <Label x:Name="txtUser" Content="Enter Username" Background="Transparent" Opacity="0.5" IsHitTestVisible="False" Margin="447,156,-447,30" Grid.Row="3"/>
        <Label x:Name="txtPass" Content="Enter Password" Background="Transparent" Opacity="0.5" IsHitTestVisible="False" Margin="447,225,-447,-39" Grid.Row="3"/>
    </Grid>
</Window>