<Window x:Class="CoinControl.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinControl"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">

    <Grid Height="434">
        <Grid.Background>
            <ImageBrush ImageSource="img\mainbg.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="txtPassword" Grid.Row="3" Margin="436,246,118,-58" Height="34" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <Button Content="Login" Click="btnLogin_Click" Grid.Row="3" Margin="390,315,255,-125" RenderTransformOrigin="0.5,0.5" Height="31.96">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.061"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Create an Account" Click="createAcc_Click" Margin="570,314,75,-124" Grid.Row="3" Height="31.96">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.061"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="WELCOME" Margin="372,49,0,0" Grid.Row="3" Width="412" FontFamily="MV Boli" FontSize="72" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtUsername" Grid.Row="3" Margin="436,199,118,5" Height="34" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>