<Window x:Class="CoinControl.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinControl"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">

    <Grid Height="434">
       <!-- <Grid.Background>
            <ImageBrush ImageSource="images\mainbg.png"/> 
        </Grid.Background> --> 

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Username" Grid.Row="3" Margin="506,92,214,107"/>
        <TextBox x:Name="txtUsername" Grid.Row="3" Margin="506,113,94,0" Height="18" VerticalAlignment="Top"/>

        <TextBlock Text="Password" Grid.Row="3" Margin="506,157,205,41"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="3" Margin="506,178,94,24"/>

        <Button Content="Login" Click="btnLogin_Click" Grid.Row="3" Margin="528,223,117,-33" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.061"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Create an Account" Click="createAcc_Click" Margin="527,271,118,-83" Grid.Row="3">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.061"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="CoinControl" HorizontalAlignment="Left" Margin="458,35,0,68" Grid.Row="3" Width="332" FontFamily="MV Boli"/>
    </Grid>
</Window>