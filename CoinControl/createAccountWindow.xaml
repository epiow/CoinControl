<Window x:Class="CoinControl.createAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinControl"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="426" 
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style x:Key="MyButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Border CornerRadius="35" BorderThickness="20">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#666666" Offset="0.0"/>
                <GradientStop Color="#666666" Offset="0.5"/>
                <GradientStop Color="#666666" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#666666" Offset="0.0"/>
                    <GradientStop Color="#666666" Offset="0.5"/>
                    <GradientStop Color="#666666" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid>
                <TextBox Name="userText"
                         TextChanged="userTextChanged" 
                         FontFamily="pack://application:,,,/fonts/#Montserrat" 
                         BorderThickness="0" 
                         HorizontalAlignment="Center" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Width="234" 
                         Height="34"
                         Margin="0,38,0,0" 
                         VerticalContentAlignment="Center" Padding="7,0,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="txtUser" 
                       Content="Enter Username" 
                       Background="Transparent" 
                       Opacity="0.5" 
                       IsHitTestVisible="False" 
                       Margin="79,43,190,333"
                       FontFamily="pack://application:,,,/fonts/#Montserrat"/>
                
                <TextBox Name="emailText" 
                         TextChanged="emailTextChanged" 
                         FontFamily="pack://application:,,,/fonts/#Montserrat" 
                         BorderThickness="0" 
                         HorizontalAlignment="Center" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Width="234" 
                         Height="34" 
                         Margin="0,108,0,0" 
                         VerticalContentAlignment="Center" Padding="7,0,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="txtEmail" 
                       Content="Enter Email" 
                       Background="Transparent" 
                       Opacity="0.5" 
                       IsHitTestVisible="False" 
                       Margin="79,114,190,232"
                       FontFamily="pack://application:,,,/fonts/#Montserrat"/>      

                <TextBox Name="passText" 
                             TextChanged="passTextChanged" 
                             FontFamily="pack://application:,,,/fonts/#Montserrat" 
                             BorderThickness="0" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Top" 
                             Width="234" 
                             Height="34"
                             Margin="0,178,0,0" 
                             VerticalContentAlignment="Center" Padding="7,0,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="txtPass" 
                       Content="Enter Password" 
                       Background="Transparent" 
                       Opacity="0.5" 
                       IsHitTestVisible="False" 
                       Margin="79,183,190,198"
                       FontFamily="pack://application:,,,/fonts/#Montserrat"/>  

                <TextBox Name="confirmPassText" 
                             TextChanged="confirmPassTextChanged" 
                             FontFamily="pack://application:,,,/fonts/#Montserrat"
                             BorderThickness="0" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Top" 
                             Width="234" 
                             Height="34" 
                             Margin="0,248,0,0" 
                             VerticalContentAlignment="Center" Padding="7,0,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="txtConfirm" 
                       Content="Confirm Password" 
                       Background="Transparent" 
                       Opacity="0.5" 
                       IsHitTestVisible="False" 
                       Margin="79,253,180,128"
                       FontFamily="pack://application:,,,/fonts/#Montserrat"/>

                <TextBox Name="balanceText" 
                         TextChanged="balanceTextChanged"
                         FontFamily="pack://application:,,,/fonts/#Montserrat" 
                         BorderThickness="0" 
                         HorizontalAlignment="Center" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top"
                         Width="234" Height="34" 
                         Margin="0,318,0,0" 
                         VerticalContentAlignment="Center" Padding="7,0,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="txtBalance" 
                       Content="Enter Initial Balance" 
                       Background="Transparent" 
                       Opacity="0.5" 
                       IsHitTestVisible="False" 
                       Margin="79,323,170,58"
                       FontFamily="pack://application:,,,/fonts/#Montserrat" RenderTransformOrigin="0.5,0.5">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0.197"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0.219"/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
            </Grid>

            <Label Content="SIGN UP" FontFamily="pack://application:,,,/fonts/#HarmoniaSansMonoW01-Regular" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button Name="return" 
                    Click="returnButton" 
                    Margin="0,10,0,0" 
                    BorderThickness="0"  
                    Style="{StaticResource MyButton}" 
                    HorizontalAlignment="Left" 
                    Height="53" 
                    VerticalAlignment="Top" 
                    Width="56">
                <Image Source="img\returnButton.png" Height="37" Width="39"></Image>
            </Button>

        </Grid>
    </Border>
</Window>
